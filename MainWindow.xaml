<Window x:Class="MyAuthApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="350" Width="300">
    <Grid> 
        <StackPanel Margin="10">
            <Label Content="Логин:"/>
            <TextBox Name="LoginTextBox" Margin="0,0,0,10"/>
            <Label Content="Пароль:"/>
            <PasswordBox Name="PasswordBox" Margin="0,0,0,10"/>
            <Button Content="Войти" Click="LoginButton_Click" Margin="0,0,0,10"/>
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>